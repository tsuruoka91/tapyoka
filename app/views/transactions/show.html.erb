<p style="color: green"><%= notice %></p>

<section class="mb-4">
  <div class="row g-0">
    <div class="w-auto ms-auto">
      <%= link_to "編集", edit_transaction_path(@transaction), class: "btn btn-outline-primary" %>
      <%= link_to "削除", @transaction, data: { turbo_method: "delete", turbo_confirm: "削除してもよろしいですか？" }, class: "btn btn btn-danger"%>
      <%= link_to "戻る", transactions_path, class: "btn btn-link" %>
      </div>
  </div>
</section>

<section class="mb-4">
  <div class="card">
    <div class="card-header text-center py-3">
      <h5 class="mb-0 text-center">
        <strong>Transaction #<%= @transaction.id %></strong>
      </h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover text-nowrap">
          <tbody>
            <tr>
              <th scope="col">Id</th>
              <td scope="col"><%= @transaction.id %></td>
            </tr>
            <tr>
              <th scope="col">Txid</th>
              <td scope="col"><%= @transaction.txid %></th>
            </tr>
            <tr>
              <th scope="col">Token Id</th>
              <td scope="col"><%= @transaction.token_id %></th>
            </tr>
            <tr>
              <th scope="col">From User</th>
              <td scope="col"><%= @transaction.from_user %></th>
            </tr>
            <tr>
              <th scope="col">To User</th>
              <td scope="col"><%= @transaction.to_user %></th>
            </tr>
            <tr>
              <th scope="col">メモ</th>
              <td scope="col"><%= @transaction.memo %></th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
