<p style="color: green"><%= notice %></p>

<section class="mb-4">
  <div class="row g-0">
    <div class="w-auto ms-auto">
      <%= link_to "ユーザー追加", new_user_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</section>

<section class="mb-4">
  <div class="card">
    <div class="card-header text-center py-3">
      <h5 class="mb-0 text-center">
        <strong>ユーザー</strong>
      </h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover text-nowrap">
          <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">名前</th>
            <th scope="col">アドレス</th>
            <th scope="col">作成日</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |t| %>
          <tr>
            <th scope="row"><%= link_to t[:id], user_path(t[:id]) %></th>
            <td><%= link_to t[:name], user_path(t[:id]) %></td>
            <td><%= t.address %></td>
            <td><%= l t.created_at, format: :default %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
